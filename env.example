# Entorno
APP_ENV=development
LOG_LEVEL=INFO
LOG_DIR=./logs
ENABLE_DEBUG_LOG=true

# Flags de ejecución
DRY_RUN=true
CSV_ALWAYS=true   # <--- nuevo flag para generar CSV también en modo real

# PrestaShop
PRESTA_URL=https://distri-latina.ch
PRESTA_KEY=xxxx
PRESTA_USE_XML=true
PRESTA_AUTH_SCHEME=ws_key
PRESTA_SEARCH_PATH=/products
PRESTA_TIMEOUT=30

# Odoo
ODOO_BASE_URL=https://swisslatinagroup.odoo.com
# Opción A: token-based (si lo habilitas en Odoo)
ODOO_API_KEY=
ODOO_AUTH_SCHEME=bearer
# Opción B: user/password (actual)
ODOO_DB=swisslatinagroup
ODOO_USER=xxxx@swisslatinagroup.com
ODOO_PASS=xxxx
ODOO_AUTH_SCHEME=header

# Webhook
WEBHOOK_TOKEN=xxxx

# Cache y resolución SKU->ID
CACHE_TTL_SECONDS=3600
CACHE_DIR=./app/cache
SKU_RESOLVER_SEARCH_PATH=/products

# Directorio de CSVs de dry-run / auditoría
DRYRUN_DIR=./dryrun